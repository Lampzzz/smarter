{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["packages/shared/*"],
      "@/mobile/*": ["apps/mobile/*"],
      "@/web/*": ["apps/web/*"]
    }
  },
  "include": ["shared/**/*", "apps/mobile/**/*", "apps/web/**/*"],
  "exclude": ["node_modules"]
}
